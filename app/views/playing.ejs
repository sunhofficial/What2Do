    <script>
        function fill(){
            
            const gender=$('input[name=gender]:checked').val(); 
            const body=document.querySelector(".choosegame");
            
            if(gender=="boys"){
              const addSpan =document.createElement("span");
              addSpan.innerHTML='<button>당구장</button>';
              const addSpan1 =document.createElement("span");
              addSpan1.innerHTML='<button>PC방</button>';
              const addSpan2 =document.createElement("span");
              addSpan2.innerHTML='<button>노래방</button>';
              body.append(addSpan);
              body.append(addSpan1);
              body.append(addSpan2);
    
            }
            else if(gender=="girls"){
              const addSpan =document.createElement("span");
              addSpan.innerHTML='<button>이니스프리</button>';
              const addSpan1 =document.createElement("span");
              addSpan1.innerHTML='<button>올리브영</button>';
              const addSpan2 =document.createElement("span");
              addSpan2.innerHTML='<button>만화방</button>';
              body.prepend(addSpan);
              body.prepend(addSpan1);
              body.prepend(addSpan2);
    
            }
            else{
              console.log(gender)
              const addSpan =document.createElement("span");
              addSpan.innerHTML='<button>책방</button>';
              const addSpan1 =document.createElement("span");
              addSpan1.innerHTML='<button>코노</button>';
              const addSpan2 =document.createElement("span");
              addSpan2.innerHTML='<button>보드게임</button>';
              body.append(addSpan);
              body.append(addSpan1);
              body.append(addSpan2);
    
            }
    

            const keyword=document.getElementById("keyword");
            const input=document.getElementById("myInput");
            keyword.value=input.value+" 놀거리";
            const search=document.getElementById("keywordsearch");
            search.click();

        }
    </script>
